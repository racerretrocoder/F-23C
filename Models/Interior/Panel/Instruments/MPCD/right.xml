<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
  <model>
  <name>off</name>
    <path>screenoff.ac</path>
  </model>

  <model>
  <name>menu</name>
    <path>menu.xml</path>
  </model>

  <model>
  <name>engine</name>
    <path>engine.xml</path>
  </model>

  <model>
  <name>aaradar</name>
    <path>radar.xml</path>
  </model>


  <animation>
	 <type>select</type>
	 <object-name>off</object-name>
	 <condition>   
			 <equals>
				 <property>controls/MPCD/Rpower</property>
				 <value>0</value>
			 </equals>
	 </condition>
 </animation>


  <animation>
	 <type>select</type>
	 <object-name>menu</object-name>
	 <condition>   
        <and>
			 <equals>
				 <property>controls/MPCD/Rpower</property>
				 <value>1</value>
			 </equals>
			 <equals>
				 <property>controls/MPCD/Rpage</property>
				 <value>0</value>
			 </equals>
			 <equals>
				 <property>controls/MPCD/Rbit</property>
				 <value>0</value>
			 </equals>
        </and>
	 </condition>
 </animation>
 
  <animation>
	 <type>select</type>
	 <object-name>engine</object-name>
	 <condition>   
        <and>
			 <equals>
				 <property>controls/MPCD/Rpower</property>
				 <value>1</value>
			 </equals>
			 <equals>
				 <property>controls/MPCD/Rpage</property>
				 <value>3</value>
			 </equals>
			 <equals>
				 <property>controls/MPCD/Rbit</property>
				 <value>0</value>
			 </equals>
        </and>
	 </condition>
 </animation>
 
   <animation>
	 <type>select</type>
	 <object-name>aaradar</object-name>
	 <condition>   
        <and>
			 <equals>
				 <property>controls/MPCD/Rpower</property>
				 <value>1</value>
			 </equals>
			 <equals>
				 <property>controls/MPCD/Rpage</property>
				 <value>6</value>
			 </equals>
			 <equals>
				 <property>controls/MPCD/Rbit</property>
				 <value>0</value>
			 </equals>
        </and>
	 </condition>
 </animation>

</PropertyList>


